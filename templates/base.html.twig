<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mappix - Conciergerie Rouen{% endblock %}</title>
    
    {# Favicon #}
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üèõÔ∏è</text></svg>">
    
    {# Polices Google Fonts #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    {# Stylesheets Webpack Encore #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {# Styles additionnels pour cette page #}
    {% block extra_styles %}{% endblock %}
</head>

<body class="font-sans antialiased bg-gray-50">
    {# Navigation #}
    {% block navbar %}
        <nav class="bg-white shadow-md sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    {# Logo #}
                    <div class="flex items-center">
                        <a href="{{ path('app_home') }}" class="flex items-center space-x-2">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <span class="text-xl font-bold text-gray-900">Mappix</span>
                            <span class="hidden sm:inline text-sm text-gray-500">Rouen</span>
                        </a>
                    </div>

                    {# Menu Desktop #}
                    <div class="hidden md:flex items-center space-x-8">
                        <a href="{{ path('app_home') }}" class="text-gray-700 hover:text-blue-600 transition-colors">Accueil</a>
                        <a href="#services" class="text-gray-700 hover:text-blue-600 transition-colors">Services</a>
                        <a href="#evenements" class="text-gray-700 hover:text-blue-600 transition-colors">√âv√©nements</a>
                        <a href="#lieux" class="text-gray-700 hover:text-blue-600 transition-colors">Lieux</a>
                        <a href="#contact" class="text-gray-700 hover:text-blue-600 transition-colors">Contact</a>
                    </div>

                    {# Boutons d'action #}
                    <div class="flex items-center space-x-4">
                        {% if app.user %}
                            {# Utilisateur connect√© #}
                            <div class="flex items-center space-x-3">
                                <span class="text-sm text-gray-700">Bonjour, {{ app.user.email }}</span>
                                <a href="{{ path('app_logout') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-500 rounded-lg hover:bg-red-600 transition-colors">
                                    D√©connexion
                                </a>
                            </div>
                        {% else %}
                            {# Utilisateur non connect√© #}
                            <a href="{{ path('app_login') }}" class="text-gray-700 hover:text-blue-600 transition-colors">Connexion</a>
                            <a href="{{ path('app_register') }}" 
                               class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors"
                               data-ripple-light="true">
                                Inscription
                            </a>
                        {% endif %}

                        {# Menu Mobile Toggle #}
                        <button type="button" 
                                class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 focus:outline-none"
                                onclick="toggleMobileMenu()">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            {# Menu Mobile #}
            <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="{{ path('app_home') }}" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 hover:text-blue-600">Accueil</a>
                    <a href="#services" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 hover:text-blue-600">Services</a>
                    <a href="#evenements" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 hover:text-blue-600">√âv√©nements</a>
                    <a href="#lieux" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 hover:text-blue-600">Lieux</a>
                    <a href="#contact" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 hover:text-blue-600">Contact</a>
                </div>
            </div>
        </nav>
    {% endblock %}

    {# Messages Flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
                <div class="rounded-lg p-4 
                    {% if label == 'success' %}bg-green-50 text-green-800 border border-green-200
                    {% elseif label == 'error' %}bg-red-50 text-red-800 border border-red-200
                    {% elseif label == 'warning' %}bg-yellow-50 text-yellow-800 border border-yellow-200
                    {% else %}bg-blue-50 text-blue-800 border border-blue-200{% endif %}">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    {# Contenu Principal #}
    <main>
        {% block body %}{% endblock %}
    </main>

