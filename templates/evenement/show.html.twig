{% extends 'base.html.twig' %}

{% block title %}{{ evenement.nom }}{% endblock %}

{% block body %}

<h1>{{ evenement.nom }}</h1>

<p><strong>Début :</strong> {{ evenement.startAt|date('d/m/Y H:i') }}</p>
<p><strong>Fin :</strong> {{ evenement.endAt|date('d/m/Y H:i') }}</p>
<p><strong>Places restantes :</strong> {{ evenement.placesRestantes }}</p>

<p>{{ evenement.description }}</p>

<div class="actions">
    {% if evenement.placesRestantes > 0 %}
        <a href="{{ path('app_reservation_create', {id: evenement.id}) }}">
            Réserver
        </a>
    {% else %}
        <p>Complet</p>
    {% endif %}

    <a href="{{ path('app_evenements') }}" data-turbo="false">
        Retour au calendrier
    </a>
</div>

{% endblock %}
