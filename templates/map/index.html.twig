{% extends 'base.html.twig' %}

{% block body %}
	<h1>Welcome to the Mappix application</h1>
	<div
		class="map-container"
		style="width: 100%; height: 400px;"
		id="map"
		data-controller="leaflet-cluster"
		data-leaflet-cluster-markers-value='{{ markers|json_encode()|e('html_attr') }}'>
		{{ ux_map(map, {style: 'width: 100%; height: 100%;'}) }}
	</div>
	{% include 'map/_map_details.html.twig' with { items: "test" } %}
{% endblock %}
